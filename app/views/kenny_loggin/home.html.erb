<div class="row margin-top-40">
	<div class="col-md-4">
		<h1>The Kenny Loggin Page</h1>
	</div>
	<div class="col-md-4">
		<div class="kl-form-frame">
			<p class="lead">Log In</p>
			
			  <div class="form-group">
			    <label for="exampleInputEmail1">Email</label>
			    <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
			  </div>
			  <div class="form-group">
			    <label for="exampleInputPassword1">Password</label>
			    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
			  </div>
			  	<button type="button" class="btn btn-default" id="submit-button">Submit</button>
			
		</div>
	</div>
</div>

<div id="kl-bubble" class="kl-bubble" style="display:none;">
	<%= image_tag('bubble.png') %>
	<div class="kl-lyrics" id="kl-lyrics">
		<div id="kl-lyrics-inner">Highway to the Danger Zone Ride into the Danger Zone</div>
		 <button type="button" class="btn btn-default" id="try-again" onclick="tryAgain()">Try again</button>
	</div>
</div>

<script>

	$("#submit-button").on('click', function() {
		$.ajax({
		    url: '/response',
		    type: 'Get',
		    success: function(data){
		    	$("#kl-lyrics-inner").html(data);
		      $("#kl-bubble").delay(500).fadeIn(400);
		    }
		  })
	});
	  
	function tryAgain() {
		$("#kl-bubble").fadeOut(400);
	}
  
</script>