<h1>The Kenny Loggin Page</h1>
<div class="row margin-top-20">
	<div class="col-md-4">
		<div class="page-main">
			<p class="lead">Loggin</p>
			
			<div class="form-group">
				<label for="exampleInputEmail1">Email</label>
				<input type="email" class="form-control input-lg" id="exampleInputEmail1" placeholder="Enter email">
			</div>
			<div class="form-group">
				<label for="exampleInputPassword1">Password</label>
				<input type="password" class="form-control input-lg" id="exampleInputPassword1" placeholder="Password">
			</div>
			<button type="button" class="btn btn-primary btn-lg" id="submit-button">Loggin</button>
			
		</div>
	</div>
</div>

<div class="row margin-top-20">
	<div id="kl-bubble" class="col-md-7" style="display:none;">
		<div class="page-main">
			<div class="kl-triangle pull-right"></div>
			<div class="kl-response" id="kl-lyrics-inner" style="font-style:italic"></div>
			<button type="button" class="btn btn-primary btn-lg margin-top-20" id="try-again" onclick="tryAgain()">Try again</button>
			
		</div>
	</div>
</div>

<script>

	$("#submit-button").on('click', function() {
		$.ajax({
		    url: '/response',
		    type: 'Get',
		    success: function(data){
		    	$("#kl-lyrics-inner").html(data);
		      $("#kl-bubble").delay(500).fadeIn(400);
		    }
		  })
	});
	  
	function tryAgain() {
		$("#kl-bubble").fadeOut(400);
	}
  
</script>